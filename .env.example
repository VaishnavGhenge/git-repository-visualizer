# Git Repository Visualizer - Environment Configuration

# Server Configuration
PORT=8080

# Database Configuration
DATABASE_URL=postgres://localhost/git_analytics?sslmode=disable
DB_MAX_OPEN_CONNS=25
DB_MAX_IDLE_CONNS=5
DB_CONN_MAX_LIFETIME=5m

# Redis Configuration
# For local development (default):
# REDIS_ADDR=localhost:6379
# REDIS_PASSWORD=
# REDIS_DB=0
# REDIS_USE_TLS=false
# REDIS_USERNAME=default

# For Redis Cloud (example format):
# REDIS_ADDR=redis-xxxxx.region.cloud.redislabs.com:port
# REDIS_PASSWORD=your_password_here
# REDIS_DB=0
# REDIS_USE_TLS=true
# REDIS_USERNAME=default

REDIS_ADDR=localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_USE_TLS=false
REDIS_USERNAME=default
REDIS_QUEUE_NAME=git_index_jobs

# Worker Configuration
WORKER_CONCURRENCY=5
GIT_STORAGE_PATH=/var/lib/git-analytics/repos
POLL_INTERVAL=6h

# Authentication Configuration
JWT_SECRET=your_secure_jwt_secret_here

# GitHub OAuth
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret
GITHUB_REDIRECT_URL=http://localhost:8080/api/v1/auth/github/callback

# Google OAuth
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URL=http://localhost:8080/api/v1/auth/google/callback
